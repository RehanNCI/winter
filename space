    <script>
        // Audio Context & Management
        const ambient = document.getElementById('ambient');
        const warpSound = document.getElementById('warp');
        const warpButton = document.getElementById('warpButton');
        let audioUnlocked = false;

        function unlockAudio() {
            if (audioUnlocked) return;
            ambient.volume = 0;
            ambient.play().then(() => {
                fadeIn(ambient, 0.4, 3000);
            }).catch(() => {});
            audioUnlocked = true;
        }

        function fadeIn(audio, targetVol, duration) {
            audio.volume = 0;
            const steps = 50;
            const interval = duration / steps;
            let current = 0;
            const timer = setInterval(() => {
                current += targetVol / steps;
                audio.volume = Math.min(current, targetVol);
                if (current >= targetVol) clearInterval(timer);
            }, interval);
        }

        // Starfield
        const starCanvas = document.getElementById('starfield');
        const ctx = starCanvas.getContext('2d');
        let stars = [];

        function initStarfield() {
            starCanvas.width = window.innerWidth;
            starCanvas.height = window.innerHeight;
            stars = Array.from({length: 600}, () => ({
                x: Math.random() * starCanvas.width,
                y: Math.random() * starCanvas.height,
                size: Math.random() * 1.5,
                speed: Math.random() * 0.8 + 0.2,
                twinkle: Math.random() * Math.PI * 2
            }));
        }

        function animateStars() {
            ctx.fillStyle = 'rgba(0, 8, 20, 0.05)';
            ctx.fillRect(0, 0, starCanvas.width, starCanvas.height);
            ctx.fillStyle = 'white';
            stars.forEach(s => {
                const opacity = 0.5 + Math.sin(s.twinkle) * 0.5;
                ctx.globalAlpha = opacity;
                ctx.fillRect(s.x, s.y, s.size, s.size);
                s.y += s.speed;
                s.twinkle += 0.05;
                if (s.y > starCanvas.height) {
                    s.y = 0;
                    s.x = Math.random() * starCanvas.width;
                }
            });
            ctx.globalAlpha = 1;
            requestAnimationFrame(animateStars);
        }

        // Hyperspace Jump
        const hyperspace = document.getElementById('hyperspace');
        const hctx = hyperspace.getContext('2d');
        const spaceship = document.getElementById('spaceship');

        function startWarpJump() {
            unlockAudio();
            warpSound.currentTime = 0;
            warpSound.volume = 0.7;
            warpSound.play();

            hyperspace.style.display = 'block';
            hyperspace.width = window.innerWidth;
            hyperspace.height = window.innerHeight;

            spaceship.style.display = 'block';
            spaceship.style.left = '-150px';

            let particles = [];
            for (let i = 0; i < 800; i++) {
                particles.push({
                    x: innerWidth / 2,
                    y: innerHeight / 2,
                    vx: (Math.random() - 0.5) * 20,
                    vy: (Math.random() - 0.5) * 20,
                    life: 1
                });
            }

            let frame = 0;
            function warpEffect() {
                hctx.fillStyle = 'rgba(0,0,0,0.3)';
                hctx.fillRect(0, 0, hyperspace.width, hyperspace.height);

                particles.forEach(p => {
                    p.x += p.vx;
                    p.y += p.vy;
                    p.vx *= 1.08;
                    p.vy *= 1.08;
                    p.life -= 0.02;

                    hctx.fillStyle = `rgba(13, 207, 255, ${p.life})`;
                    hctx.fillRect(p.x - 2, p.y - 2, 4, 4);
                });

                particles = particles.filter(p => p.life > 0);

                if (frame < 100) {
                    requestAnimationFrame(warpEffect);
                    frame++;
                } else {
                    hyperspace.style.display = 'none';
                }
            }
            warpEffect();

            // Spaceship fly-by
            let pos = -200;
            const fly = setInterval(() => {
                pos += 25;
                spaceship.style.left = pos + 'px';
                if (pos > innerWidth + 100) {
                    spaceship.style.display = 'none';
                    clearInterval(fly);
                }
            }, 16);
        }

        // Event Listeners
        warpButton.addEventListener('click', startWarpJump);
        window.addEventListener('resize', initStarfield);
        window.addEventListener('scroll', () => {
            document.getElementById('header').classList.toggle('scrolled', scrollY > 100);
        });

        // Init
        initStarfield();
        animateStars();
    </script>
</body>
